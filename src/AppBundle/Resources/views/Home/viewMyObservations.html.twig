{% extends "AppBundle::layout.html.twig" %}

{% block body %}
	{% block heading %} {{ parent() }} {% endblock %}

<form class="tableObservation">
contributions
<table id="observations">
<thead>
	<tr>
	<th>id</th><th>commentaires</th>
	<th>date</th><th>type d'oiseau</th>
	<th>Latitude</th><th>Longitude</th>
	<th>image</th>
	<th>voir sur la carte</th>
	<th>statut</th>
	
	</tr>
</thead>
<tbody>
{% for observation in observations %}
<tr><td class="theID">{{ observation.id }}</td><td> {{ observation.comment }}</td>
	<td>{{ observation.date|date("m/d/Y", false) }}</td><td class="bird">{{ observation.bird.lbNom }}</td>
	<td class="gps"> {{ observation.lat }}</td><td class="gps"> {{ observation.lng }}</td>
	<td class="photos">{% if (observation.image) %} <img src="{{ server ~ asset( folder  ~ '/' ~ observation.image ) }}" />    {%endif %}</td> 
	<td><button class="showMap" data-lat="{{ observation.lat }}" data-lng="{{ observation.lng }}">voir sur la carte</button></td>
	<td>{{ observation.statut }}</td>
</tr>
 {% endfor %}
 <tbody>
</table>
</form>
 
</div>
<hr />
<div id="map"></div>

{% endblock %}


{% block javascripts %} {{ parent() }} 
<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
<script src="{{ asset('/js/libs/datatables/js/jquery.dataTables.min.js')}}"></script>
<script src="//cdn.datatables.net/plug-ins/1.10.12/sorting/datetime-moment.js"></script>
<script src="https://unpkg.com/leaflet@1.0.0-rc.3/dist/leaflet.js"></script>
<script>
       



(function($){

var modal = function(){
// show modal
return ;
}
/*//// begin map ////**/

//init map in globally scope
var map = new L.Map('map');
	function initMap(lat, lng, typeOfBird){
	
	map.setView([lat,lng], 13);
	L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
	}).addTo(map);

	L.marker([lat, lng]).addTo(map)
    .bindPopup( typeOfBird )
    .openPopup();
    	
};
	
	$(".showMap").on("click", function(e){
	e.preventDefault();
	var lat = $(this).data('lat');
	var lng = $(this).data('lng');
	var bird = $(this).parent().parent().find(".bird").text();
	initMap(lat,lng, bird );
		
	});

/**///////// end map /////////////**/


	// must match with twig filter observation.date|date
	$.fn.dataTable.moment('m/d/Y');
	//init sortable table
	$("#observations").DataTable({
    language: {
